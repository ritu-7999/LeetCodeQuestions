class Solution {
    public int minFlipsMonoIncr(String s) {
        int o=0;
        int z=0;
    int n=s.length();
    for(int i=0;i<n;i++){
        if(s.charAt(i)=='0'){
            if(o==0)
             continue;
              else z++;
         }
                else{
o++;
            }
             if(z>o){z=o;}    
        }
       
        return z;
  
